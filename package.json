{
  "name": "impulse-ui",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Alexander Polyanov",
  "workspaces": ["packages/*"],
  "packageManager": "npm@10.8.1",
  "scripts": {
    "build": "turbo build",
    "watch": "lerna run start",
    "build-storybook": "storybook build",
    "lint": "lerna run lint",
    "storybook": "storybook dev -p 6006",
    "test": "lerna run test",
    "release": "npm run build && changeset publish",
    "create-package": "bun scripts/createPackage.ts",
    "clean-packages": "bun scripts/cleanInstall.ts && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.7",
    "@faker-js/faker": "^8.4.1",
    "@tsconfig/vite-react": "^3.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "bun": "^1.1.20",
    "husky": "^9.0.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.6.3",
    "tsup": "^8.1.0",
    "turbo": "^2.0.9",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@floating-ui/react-dom": "^2.1.1",
    "@fortawesome/fontawesome-svg-core": "6.5.2",
