{
  "name": "@impulse-ui/input",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Alexander Polyanov",
  "main": "dist/index.js",
  "module": "dist/input.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint ./src",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": true,
    "bracketSameLine": false,
    "endOfLine": "auto",
    "bracketSpacing": true
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "@impulse-ui/buttons": "^1.0.0",
    "@impulse-ui/colours": "^1.0.0",
    "@impulse-ui/core": "^1.0.0",
    "@impulse-ui/layout": "^1.0.0",
    "@impulse-ui/text": "^1.0.0",
    "@impulse-ui/types": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/impulse-ui-input.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/impulse-ui-input.esm.js",
      "limit": "10 KB"
    }
  ]
}
