{
  "name": "@impulse-ui/types",
  "version": "2.12.0",
  "license": "MIT",
  "author": "Alexander Polyanov",
  "typings": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsc --emitDeclarationOnly --declaration",
    "lint": "biome check ./src --write",
    "start": "tsup --watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": true,
    "bracketSameLine": false,
    "endOfLine": "auto",
    "bracketSpacing": true
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "csstype": "^3.1.2",
    "jsqr-es6": "^1.4.0-1",
    "tesseract.js": "^5.1.0"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  }
}
