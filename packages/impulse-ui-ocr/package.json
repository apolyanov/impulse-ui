{
  "name": "@impulse-ui/ocr",
  "version": "4.0.0",
  "license": "MIT",
  "type": "module",
  "author": "Alexander Polyanov",
  "main": "./dist/ocr.umd.js",
  "module": "./dist/ocr.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/ocr.es.js",
      "require": "./dist/ocr.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "lint": "biome check src --write",
    "start": "vite build --watch",
    "test": "dts test --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "jsxSingleQuote": true,
    "bracketSameLine": false,
    "endOfLine": "auto",
    "bracketSpacing": true
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "@impulse-ui/buttons": "^4.0.0",
    "@impulse-ui/colours": "^4.0.0",
    "@impulse-ui/core": "^4.0.0",
    "@impulse-ui/icon": "^4.0.0",
    "@impulse-ui/layout": "^4.0.0",
    "@impulse-ui/scanner-core": "^4.0.0",
    "tesseract.js": "5.1.1"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  }
