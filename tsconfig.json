{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "jsx": "react-jsx",
    "typeRoots": ["./dist/index.d.ts"],

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictFunctionTypes": true
  },
  "include": ["src", "types", "scripts"],
  "exclude": ["dist"],
  "references": [
    {
      "path": "./packages/impulse-ui-core"
    },
    {
      "path": "./packages/impulse-ui-buttons"
    },
    {
      "path": "./packages/impulse-ui-colours"
    },
    {
      "path": "./packages/impulse-ui-icon"
    },
    {
      "path": "./packages/impulse-ui-layout"
    },
    {
      "path": "./packages/impulse-ui-text"
    },
    {
      "path": "./packages/impulse-ui-input"
    },
    {
      "path": "./packages/impulse-ui-toolkit"
    },
    {
      "path": "./packages/impulse-ui-auto-complete"
    },
    {
      "path": "./packages/impulse-ui-navigation"
    },
    {
      "path": "./packages/impulse-ui-avatar"
    },
    {
      "path": "./packages/impulse-ui-table"
    },
    {
      "path": "./packages/impulse-ui-loader"
    },
    {
      "path": "./packages/impulse-ui-qr"
    },
    {
      "path": "./packages/impulse-ui-scanner-core"
    },
    {
      "path": "./packages/impulse-ui-ocr"
    }
  ]
}
